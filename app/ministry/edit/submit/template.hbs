<div role="tabpanel" class="tab-pane" id="submit">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">
              Submit
            </h3>
        </div>
        <div class="panel-body detail-section-content">
            <table class="table">
                <tr class="table-header">
                    <th><p>This is where we will be submitting the monthly report!</p></th>
                </tr>
            </table>
            
            <!--Tab Buttons-->
            <div id="submissionTabButtons">
                <span class="row"> 
                    <span class="col-xs-4"><button class="btn btn-primary col-xs-offset-2 col-xs-8 submissionTab">Staff</button></span>
                    <span class="col-xs-4"><button class="btn btn-primary col-xs-offset-2 col-xs-8 submissionTab">Patient</button></span>
                    <span class="col-xs-4"><button class="btn btn-primary col-xs-offset-2 col-xs-8 submissionTab">Leadership</button></span>
                </span>
                <span class="row">
                    <span class="col-xs-4"><button class="btn btn-primary col-xs-offset-2 col-xs-8 submissionTab">Community</button></span>
                    <span class="col-xs-4"><button class="btn btn-primary col-xs-offset-2 col-xs-8 submissionTab">Christianity Explored</button></span>
                    <span class="col-xs-4"><button class="btn btn-primary col-xs-offset-2 col-xs-8 submissionTab">Faith Declarations</button></span>
                </span>
                <span class="row">
                    <span class="col-xs-4"><button class="btn btn-primary col-xs-offset-2 col-xs-8 submissionTab">Demographics</button></span>
                    <span class="col-xs-4"><button class="btn btn-primary col-xs-offset-2 col-xs-8 submissionTab">Additional Info</button></span>
                    <span class="col-xs-4"><button class="btn btn-primary col-xs-offset-2 col-xs-8 submissionTab">Summary</button></span>
                </span>
            </div>
            
            <!--Bottom Buttons-->
            <span id="submissionTabButtonsBottom" class="row">
                <span class="col-xs-12">
                    <button class="btn btn-primary col-xs-offset-5 col-xs-2 submissionTabS" {{action 'updateReport'}}>Save</button>
                </span>   
                <span class="col-xs-12">
                    <button class="btn btn-primary col-xs-offset-5 col-xs-2 submissionTabS" {{action 'blahblahreport'}}>Submit</button>
                </span>
            </span>
        </div>
    </div>
