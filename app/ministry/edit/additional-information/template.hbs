<div role="tabpanel" class="tab-pane" id="additionalInformation">
  {{#em-form model=this submit_button=false bubbles=false}}
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">
              Additional Info
            </h3>
        </div><!--end panel-heading-->
        <div class="panel-body">
          <div class="row">
              <h3 class="panel-title panel-body">
                Ministry Results
              </h3>
              <p class="col-lg-6">Examples: (What results has reading the book of Mark had on your ministry?,
                What has resulted from your outreach efforts?, Have there been any significant
                follow-ups with those who have expressed faith?, What has been the biggest
                challenge or success this month?)
              </p>
              {{em-text label=address1Label property="ministryResults" rows=8 class="col-lg-12"}}
          </div><!--end row-->

          <div class="row">
            <h3 class="panel-title panel-body">
              Recommendations/Needs
            </h3>
            {{em-text label=address1Label property="recommendationsNeeds" rows=8 class="col-lg-12"}}
          </div><!--end row-->

          <div class="row">
            <h3 class="panel-title panel-body">
              Other Significant Items
            </h3>
            <p class="col-lg-6">(Examples: MegaVoice, Art Therapy, Staff or Visitor Testimony, Tract Distribution, etc.)</p>
            {{em-text label=address1Label property="otherSignificantItems" rows=8 class="col-lg-12"}}
          </div><!--end row-->

        </div><!--end detail-section-content-->
    </div><!--end panel-->
  {{/em-form}}
</div>
