    //This is a jquery function to hide the current believers section until they click the Show button//
    $(document).ready(function(){
        $('.showCurrentBelievers').click(function(){
            $('.showHideBelievers').show(500);
            $('.showCurrentBelievers').hide();
            $('.hideCurrentBelievers').show();
        });
        $('.hideCurrentBelievers').click(function(){
            $('.showHideBelievers').hide(500);
            $('.hideCurrentBelievers').hide();
            $('.showCurrentBelievers').show();
        });
    });
</script>
