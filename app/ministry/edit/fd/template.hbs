                              {{em-select
                                  prompt=" "
                                  label="Religious Affiliation"
                                  property="religiousAffiliation"
                                  content=religiousAffiliation
                                  optionValuePath="content"
                                  optionLabelPath="content"
                              }}
                              {{em-select
                                  prompt=" "
                                  label="Present Activity"
                                  property="presentActivity"
                                  content=presentActivity
                                  optionValuePath="content"
                                  optionLabelPath="content"
                              }}
                              {{em-select
                                  prompt=" "
                                  label="Type of Declaration"
                                  property="declarationType"
                                  content=declarationType
                                  optionValuePath="content"
                                  optionLabelPath="content"
                                  class="required"
                              }}
                              <div class="form-group">
                                <label>Gender</label>
                                <div>
                                    {{ext-radio name=gender content=genderList value=gender showInline=true}}
                                </div>
                            </div>
                          </div>
                      </div>
                  </div>
              </div>
