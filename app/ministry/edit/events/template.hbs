<div role="tabpanel" class="tab-pane" id="events">
    {{#em-form model=this submit_button=false bubbles=false}}
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">
                Events
            </h3>
        </div>
        
        <div class="panel-body detail-section-content">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Community Events
                    <!-- if canAddCommunityEvent make this function in future -->
                        <button class="btn btn-primary align-right" {{action "showAddCommunity" bubbles=false }}>
                            <span class="octicon octicon-plus"></span>Add New Community Event
                        </button>
                    <!-- end if -->
                </h3>
            </div>
            
            <div class="panel-body detail-section-content">
                <table class="table">
                    <tr class="table-header">
                        <th>Name</th>
                        <th>Type</th>
                        <th>Data</th>
                        <th>Location</th>
                        <th>Pastors/Churches Present</th>
                        <th>Number of Participants</th>
                        <!--if patientController.canDeleteCommunity-->
                            <th>Action</th>
                        <!--end if-->
                    </tr>
                    {{#each commEvents}}
                                <tr>
                                    <td>{{eventName}}</td>
                                    <td>{{type}}</td>
                                    <td>{{date}}</td>
                                    <td>{{location}}</td>
                                    <td>{{numberPastorChurch}}</td>
                                    <td>{{numberParticipants}}</td>
                                    <!--{{#if patientController.canDeleteCommunity}}-->
                                        <td>
                                            <button type="button" class="btn btn-default warning" {{action "showDeleteCommunity" this bubbles=false }}><span class="octicon octicon-x"></span>Delete</button>
                                        </td>
                                    <!--{{/if}}-->
                                </tr>
                    {{/each}}
                </table>
            </div>
            
            <div class="panel-heading">
                <h3 class="panel-title">
                    Leadership Events
                    <!-- if canAddCommunityEvent make this function in future -->
                        <button class="btn btn-primary align-right" {{action "showAddLeadership" bubbles=false }}>
                            <span class="octicon octicon-plus"></span>Add New Leadership Event
                        </button>
                    <!-- end if -->
                </h3>
            </div>
            
            <div class="panel-body detail-section-content">
                <table class="table">
                    <tr class="table-header">
                        <th>Description</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>

                    {{#each leadEvents}}
                                <tr>
                                    <td>{{description}}</td>
                                    <td>{{eventName}}</td>
                                    <td>{{date}}</td>
                                    <td>{{location}}</td>
                                    <!--{{#if patientController.canDeleteLeadership}}-->
                                        <td>
                                            <button class="btn btn-default warning" {{action "showDeleteCommunity" bubbles=false }}><span class="octicon octicon-x"></span>Delete</button>
                                        </td>
                                    <!--{{/if}}-->
                                </tr>
                    {{/each}}

                </table>

                <table class="table">
                    <tr class="table-header">
                        <th><p>Event for new Participant needed</p></th>
                    </tr>

                    <tr class="table-header">
                        <th>Organization</th>
                        <th>Name</th>
                        <th>Gender</th>
                    </tr>


                    <tr class="table-header">

                        <td>{{em-text property="organization" rows=1 class="col-lg-12 col-sm-6"}}</td>
                        <td>{{em-text property="pname" rows=1 class="col-lg-12 col-sm-6"}}</td>
                        <td>{{em-text property="gender" rows=1 class="col-lg-12 col-sm-6"}}</td>

                    </tr>

                </table>
            </div>
        </div>
    </div>
    {{/em-form}}
  </div>
