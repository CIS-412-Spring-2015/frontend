<div role="tabpanel" class="tab-pane" id="events">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">
                Events
            </h3>
        </div>
        <div class="panel-body detail-section-content">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Community Events
                    <!-- if canAddCommunityEvent make this function in future -->
                        <button class="btn btn-primary align-right" {{action "addNewCommunity" bubbles=false }}>
                            <span class="octicon octicon-plus"></span>Add New Community Event
                        </button>
                    <!-- end if -->
                </h3>
            </div>
            <div class="panel-body detail-section-content">
                <table class="table">
                    <tr class="table-header">
                        <th>Name</th>
                        <th>Type</th>
                        <th>Data</th>
                        <th>Location</th>
                        <th>Pastors/Churches Present</th>
                        <th>Number of Participants</th>
                        <th>Edit</th>
                    </tr>
                    <tr class="table-header">
                        <td>{{em-text property="name" rows=1 class="col-lg-12 col-sm-6"}}</td>
                        <td>{{em-text property="type" rows=1 class="col-lg-10 col-sm-6"}}</td>
                        <td>{{em-text property="date" rows=1 class="col-lg-10 col-sm-6"}}</td>
                        <td>{{em-text property="location" rows=1 class="col-lg-12 col-sm-6"}}</td>
                        <td>{{em-text property="numberPastorChurch" rows=1 class="col-lg-4 col-sm-6"}}</td>
                        <td>{{em-text property="numberParticipants" rows=1 class="col-lg-4 col-sm-6"}}</td>
                        <td>
                            <button class="btn btn-default warning" {{action "showDeleteCommunity" bubbles=false }}>
					           <span class="octicon octicon-x"></span>Remove Event
				            </button>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="panel-heading">
                <h3 class="panel-title">
                    Leadership Events
                    <!-- if canAddCommunityEvent make this function in future -->
                        <button class="btn btn-primary align-right" {{action "addNewLeadership" bubbles=false }}>
                            <span class="octicon octicon-plus"></span>Add New Leadership Event
                        </button>
                    <!-- end if -->
                </h3>
            </div>
            <div class="panel-body detail-section-content">
                <table class="table">
                    <tr class="table-header">
                        <th><p>This will need to be set up to create different events. (not just tabs)</p></th>
                    </tr>

                    <tr class="table-header">
                        <th>Description</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Location</th>
                    </tr>


                    <tr class="table-header">

                        <td>{{em-text property="name" rows=1 class="col-lg-12 col-sm-6"}}</td>
                        <td>{{em-text property="date" rows=1 class="col-lg-12 col-sm-6"}}</td>
                        <td>{{em-text property="location" rows=1 class="col-lg-12 col-sm-6"}}</td>
                        <td>{{em-text property="description" rows=1 class="col-lg-12 col-sm-6"}}</td>

                    </tr>

                </table>

                  <table class="table">
                    <tr class="table-header">
                        <th><p>Event for new Participant needed</p></th>
                    </tr>

                    <tr class="table-header">
                        <th>Organization</th>
                        <th>Name</th>
                        <th>Gender</th>
                    </tr>


                    <tr class="table-header">

                        <td>{{em-text property="organization" rows=1 class="col-lg-12 col-sm-6"}}</td>
                        <td>{{em-text property="pname" rows=1 class="col-lg-12 col-sm-6"}}</td>
                        <td>{{em-text property="gender" rows=1 class="col-lg-12 col-sm-6"}}</td>

                    </tr>

                </table>
            </div>
        </div>
    </div>
  </div>
