{{#em-form model=this submit_button=false }}

	<label>Event Name<span class="redWordSubmission">*</span></label>
	<p class="ministryInstructions">i.e. Kithome Conference</p>
	{{em-input property="eventName" placeholder="Enter the name of the event" class="required"}}

	<label>Event Date<span class="redWordSubmission">*</span></label>
    {{date-picker property="date" minDate=startOfReportMonth maxDate=endOfReportMonth placeholder="Click to enter the date of the event" class="required"}}
	
	<label>Event Location<span class="redWordSubmission">*</span></label>
    {{em-input property="location" placeholder="Enter the location of the event" class="required"}}
	
	<label>Description of Topic<span class="redWordSubmission">*</span></label>
	<p class="ministryInstructions">i.e. Training for Pastors & Lay Leaders</p>
	{{em-text property="description" placeholder="Enter a description of the leadership event" class="required" rows=3 }}
{{/em-form}}
